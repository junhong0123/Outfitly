@page "/Admin/Users"
@attribute [Authorize(Roles = "Admin")]
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject UserManager<IdentityUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

<PageTitle>Users - Admin</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Users</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Manage user accounts and roles</p>
        </div>
    </div>

    <!-- Search -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4">
        <div class="relative">
            <svg class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" @bind="_searchQuery" @bind:event="oninput" @onkeyup="FilterUsers"
                   placeholder="Search users by email..."
                   class="w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
        </div>
    </div>

    <!-- Users Table -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">User</th>
                        <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email Confirmed</th>
                        <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Role</th>
                        <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    @foreach (var user in _filteredUsers)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-400 to-purple-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
                                        @(user.Email?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">@user.UserName</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@user.Email</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                @if (user.EmailConfirmed)
                                {
                                    <span class="inline-flex items-center gap-1 text-green-600 text-sm">
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                        </svg>
                                        Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center gap-1 text-yellow-600 text-sm">
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                        </svg>
                                        Pending
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (_userRoles.TryGetValue(user.Id, out var roles) && roles.Contains("Admin"))
                                {
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400">
                                        Admin
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400">
                                        User
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <button @onclick="() => OpenRoleModal(user)" 
                                        class="px-3 py-1 text-sm text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 font-medium hover:bg-indigo-50 dark:hover:bg-indigo-900/30 rounded transition">
                                    Manage Role
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!_filteredUsers.Any())
        {
            <div class="p-12 text-center">
                <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <p class="text-gray-500 dark:text-gray-400 mt-4">No users found</p>
            </div>
        }
    </div>
</div>

<!-- Manage Role Modal -->
@if (_showRoleModal && _selectedUser != null)
{
    <div class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4" @onclick="CloseModal">
        <div class="bg-white dark:bg-gray-800 rounded-xl w-full max-w-md" @onclick:stopPropagation>
            <!-- Modal Header -->
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Manage User Role</h2>
                <p class="text-sm text-gray-500 dark:text-gray-400">@_selectedUser.Email</p>
            </div>

            <!-- Modal Body -->
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Select Role</label>
                    <div class="space-y-3">
                        <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer transition @(_selectedRole == "User" ? "border-indigo-500 bg-indigo-50 dark:bg-indigo-900/30" : "border-gray-300 dark:border-gray-600 hover:border-gray-400")">
                            <input type="radio" name="role" value="User" @onchange="SetUserRole" checked="@(_selectedRole == "User")"
                                   class="w-4 h-4 text-indigo-600" />
                            <div class="ml-3">
                                <span class="text-sm font-medium text-gray-900 dark:text-white">User</span>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Standard user with limited access</p>
                            </div>
                        </label>

                        <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer transition @(_selectedRole == "Admin" ? "border-indigo-500 bg-indigo-50 dark:bg-indigo-900/30" : "border-gray-300 dark:border-gray-600 hover:border-gray-400")">
                            <input type="radio" name="role" value="Admin" @onchange="SetAdminRole" checked="@(_selectedRole == "Admin")"
                                   class="w-4 h-4 text-indigo-600" />
                            <div class="ml-3">
                                <span class="text-sm font-medium text-gray-900 dark:text-white">Admin</span>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Full access to admin dashboard</p>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="p-6 border-t border-gray-200 dark:border-gray-700 flex justify-end gap-3">
                <button @onclick="CloseModal" 
                        class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                    Cancel
                </button>
                <button @onclick="UpdateUserRole" 
                        class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                    Update Role
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<IdentityUser> _users = new();
    private List<IdentityUser> _filteredUsers = new();
    private Dictionary<string, List<string>> _userRoles = new();
    private string _searchQuery = "";

    private bool _showRoleModal = false;
    private IdentityUser? _selectedUser;
    private string _selectedRole = "User";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _users = UserManager.Users.ToList();
        _filteredUsers = _users;

        // Load roles for all users
        _userRoles = new Dictionary<string, List<string>>();
        foreach (var user in _users)
        {
            var roles = await UserManager.GetRolesAsync(user);
            _userRoles[user.Id] = roles.ToList();
        }
    }

    private void FilterUsers()
    {
        if (string.IsNullOrWhiteSpace(_searchQuery))
        {
            _filteredUsers = _users;
        }
        else
        {
            _filteredUsers = _users
                .Where(u => u.Email?.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase) == true ||
                           u.UserName?.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase) == true)
                .ToList();
        }
    }

    private void OpenRoleModal(IdentityUser user)
    {
        _selectedUser = user;
        _selectedRole = _userRoles.TryGetValue(user.Id, out var roles) && roles.Contains("Admin") ? "Admin" : "User";
        _showRoleModal = true;
    }

    private void CloseModal()
    {
        _showRoleModal = false;
        _selectedUser = null;
    }

    private void SetUserRole()
    {
        _selectedRole = "User";
    }

    private void SetAdminRole()
    {
        _selectedRole = "Admin";
    }

    private async Task UpdateUserRole()
    {
        if (_selectedUser == null) return;

        // Ensure Admin role exists
        if (!await RoleManager.RoleExistsAsync("Admin"))
        {
            await RoleManager.CreateAsync(new IdentityRole("Admin"));
        }

        if (!await RoleManager.RoleExistsAsync("User"))
        {
            await RoleManager.CreateAsync(new IdentityRole("User"));
        }

        var currentRoles = await UserManager.GetRolesAsync(_selectedUser);
        
        // Remove all current roles
        if (currentRoles.Any())
        {
            await UserManager.RemoveFromRolesAsync(_selectedUser, currentRoles);
        }

        // Add new role
        await UserManager.AddToRoleAsync(_selectedUser, _selectedRole);

        await LoadUsers();
        CloseModal();
    }
}
