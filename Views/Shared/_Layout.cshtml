<!-- _Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Outfitly</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Outfitly.styles.css" asp-append-version="true" />
</head>

<body class="flex flex-col min-h-screen bg-gray-50">
    <!-- Navigation Bar -->
    <header class="bg-white border-b border-gray-200 fixed w-full top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 w-full">
                <!-- Left: Logo + Navigation Links -->
                <div class="flex items-center space-x-8">
                    <!-- Logo -->
                    <a class="text-2xl font-light tracking-widest text-black hover:text-gray-700 transition flex-shrink-0"
                        asp-area="" asp-controller="Home" asp-action="Index">
                        OUTFITLY
                    </a>

                    <!-- Navigation Links (Desktop) - Right next to logo -->
                    <div class="hidden md:flex items-center space-x-6">
                        <a class="text-sm text-gray-700 hover:text-black transition" asp-area=""
                            asp-controller="Products" asp-action="Index">Shop</a>
                        <a class="text-sm text-gray-700 hover:text-black transition" asp-area="" asp-controller="Home"
                            asp-action="About">About</a>
                        <button id="aiChatBtn" class="text-sm text-gray-700 hover:text-black transition">AI
                            Assistant</button>
                        @if (User.IsInRole("Admin"))
                        {
                        <a class="text-sm text-amber-600 hover:text-amber-800 transition font-medium" href="/admin">
                            <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Admin
                        </a>
                        }
                    </div>
                </div>

                <!-- Right: Cart + Login -->
                <div class="hidden md:flex items-center space-x-6">
                    <a asp-area="" asp-controller="Account" asp-action="Dashboard"
                        class="text-gray-700 hover:text-black transition">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </a>
                    <a asp-area="" asp-controller="Cart" asp-action="Index"
                        class="text-gray-700 hover:text-black transition relative inline-block">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                        <span id="cart-count"
                            class="cart-count absolute -top-1 -right-1 bg-black text-white text-[10px] rounded-full w-4 h-4 flex items-center justify-center font-medium">0</span>
                    </a>
                    <partial name="_LoginPartial" />
                </div>

                <!-- Mobile Menu Button -->
                <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-black">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-200 mt-2">
                <a class="block py-3 text-sm text-gray-700 hover:text-black transition" asp-area=""
                    asp-controller="Products" asp-action="Index">Shop</a>
                <a class="block py-3 text-sm text-gray-700 hover:text-black transition" asp-area=""
                    asp-controller="Home" asp-action="About">About</a>
                <button id="aiChatBtnMobile"
                    class="block py-3 text-sm text-gray-700 hover:text-black transition text-left w-full">
                    AI Assistant
                </button>
                <a class="block py-3 text-sm text-gray-700 hover:text-black transition" asp-area=""
                    asp-controller="Cart" asp-action="Index">Cart</a>
                <div class="py-3 border-t border-gray-200 mt-2">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area with padding-top for fixed header -->
    <div class="flex-grow pt-16">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-xs tracking-widest text-black mb-4">ABOUT</h3>
                    <p class="text-xs text-gray-600 leading-relaxed">
                        Outfitly brings you curated fashion with AI-powered recommendations for your unique style.
                    </p>
                </div>
                <div>
                    <h3 class="text-xs tracking-widest text-black mb-4">CUSTOMER CARE</h3>
                    <ul class="space-y-2 text-xs text-gray-600">
                        <li><a href="#" class="hover:text-black transition">Contact Us</a></li>
                        <li><a href="#" class="hover:text-black transition">Shipping Info</a></li>
                        <li><a href="#" class="hover:text-black transition">Returns</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xs tracking-widest text-black mb-4">CONNECT</h3>
                    <ul class="space-y-2 text-xs text-gray-600">
                        <li><a href="#" class="hover:text-black transition">Instagram</a></li>
                        <li><a href="#" class="hover:text-black transition">Facebook</a></li>
                        <li><a href="#" class="hover:text-black transition">Twitter</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-12 pt-8 border-t border-gray-200 text-center">
                <p class="text-xs text-gray-500">
                    &copy; 2025 Outfitly. All rights reserved. -
                    <a class="hover:text-black transition" asp-area="" asp-controller="Home"
                        asp-action="Privacy">Privacy</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- AI Chat Floating Button -->
    <button id="aiFloatingBtn"
        class="fixed bottom-6 right-6 w-14 h-14 bg-black hover:bg-gray-800 rounded-full shadow-lg hover:shadow-xl flex items-center justify-center transition-all duration-300 z-50 group">
        <svg id="chatIcon" class="w-6 h-6 text-white transition-transform duration-300" fill="none"
            stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        <svg id="closeIcon" class="w-6 h-6 text-white hidden transition-transform duration-300" fill="none"
            stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <!-- Notification dot -->
        <span
            class="absolute -top-1 -right-1 w-4 h-4 bg-red-500 rounded-full border-2 border-white flex items-center justify-center">
            <span class="text-white text-[8px] font-bold">1</span>
        </span>
    </button>

    <!-- AI Chat Window -->
    <div id="aiChatWindow"
        class="fixed bottom-24 right-6 w-80 h-[28rem] hidden z-50 flex flex-col rounded-2xl overflow-hidden shadow-2xl border border-white/20 transition-all duration-300 transform scale-95 opacity-0">
        <!-- Glassmorphism Header -->
        <div
            class="bg-black/95 backdrop-blur-xl p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-white font-semibold text-sm">Outfitly AI Assistant</h3>
                    <p class="text-white/70 text-xs flex items-center gap-1">
                        <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                        Online
                    </p>
                </div>
            </div>
            <button id="minimizeChat" class="text-white/70 hover:text-white transition p-1">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
        </div>

        <!-- Message History -->
        <div id="chatMessages" class="flex-1 bg-gray-50 p-4 overflow-y-auto space-y-4">
            <!-- Welcome Message -->
            <div class="flex items-start gap-2">
                <div
                    class="w-8 h-8 bg-black rounded-full flex-shrink-0 flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div class="bg-white rounded-2xl rounded-tl-none p-3 shadow-sm max-w-[85%]">
                    <p class="text-gray-800 text-sm">Hi! 👋 I'm your Outfitly AI assistant. How can I help you today?
                    </p>
                    <p class="text-gray-400 text-[10px] mt-1">Just now</p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="flex flex-wrap gap-2 pl-10">
                <button
                    class="quick-action px-3 py-1.5 bg-white border border-gray-200 text-gray-900 rounded-full text-xs font-medium hover:bg-gray-50 transition">
                    Find my size
                </button>
                <button
                    class="quick-action px-3 py-1.5 bg-white border border-gray-200 text-gray-900 rounded-full text-xs font-medium hover:bg-gray-50 transition">
                    Style suggestions
                </button>
                <button
                    class="quick-action px-3 py-1.5 bg-white border border-gray-200 text-gray-900 rounded-full text-xs font-medium hover:bg-gray-50 transition">
                    Track order
                </button>
            </div>
        </div>

        <!-- Input Area -->
        <div class="bg-white border-t border-gray-200 p-3">
            <div class="flex items-center gap-2">
                <input type="text" id="chatInput" placeholder="Type your message..."
                    class="flex-1 px-4 py-2.5 bg-gray-100 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-black focus:bg-white transition" />
                <button id="sendMessage"
                    class="w-10 h-10 bg-black hover:bg-gray-800 rounded-full flex items-center justify-center text-white transition-all shadow-md hover:shadow-lg">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                </button>
            </div>
            <p class="text-center text-gray-400 text-[10px] mt-2">Powered by Outfitly AI</p>
        </div>
    </div>

    <!-- jQuery (required for validation) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Mobile Menu & AI Chat Script -->
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button')?.addEventListener('click', function () {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // AI Chat Window Functionality
        const aiFloatingBtn = document.getElementById('aiFloatingBtn');
        const aiChatWindow = document.getElementById('aiChatWindow');
        const chatIcon = document.getElementById('chatIcon');
        const closeIcon = document.getElementById('closeIcon');
        const minimizeChat = document.getElementById('minimizeChat');
        const chatInput = document.getElementById('chatInput');
        const sendMessageBtn = document.getElementById('sendMessage');
        const chatMessages = document.getElementById('chatMessages');

        let isChatOpen = false;

        function toggleChat() {
            isChatOpen = !isChatOpen;

            if (isChatOpen) {
                aiChatWindow.classList.remove('hidden');
                // Trigger animation
                setTimeout(() => {
                    aiChatWindow.classList.remove('scale-95', 'opacity-0');
                    aiChatWindow.classList.add('scale-100', 'opacity-100');
                }, 10);
                chatIcon.classList.add('hidden');
                closeIcon.classList.remove('hidden');
                chatInput.focus();
            } else {
                aiChatWindow.classList.add('scale-95', 'opacity-0');
                aiChatWindow.classList.remove('scale-100', 'opacity-100');
                setTimeout(() => {
                    aiChatWindow.classList.add('hidden');
                }, 300);
                chatIcon.classList.remove('hidden');
                closeIcon.classList.add('hidden');
            }
        }

        function sendMessage() {
            const message = chatInput.value.trim();
            if (!message) return;

            // Add user message
            const userMessageHTML = `
                <div class="flex items-start gap-2 justify-end">
                    <div class="bg-gray-900 rounded-2xl rounded-tr-none p-3 shadow-sm max-w-[85%]">
                        <p class="text-white text-sm">${escapeHtml(message)}</p>
                        <p class="text-white/60 text-[10px] mt-1">Just now</p>
                    </div>
                </div>
            `;
            chatMessages.insertAdjacentHTML('beforeend', userMessageHTML);

            // Clear input
            chatInput.value = '';

            // Log to console as requested
            console.log('AI Chat Message Sent:', message);

            // Scroll to bottom
            chatMessages.scrollTop = chatMessages.scrollHeight;

            // Simulate AI response (for demo)
            setTimeout(() => {
                const aiResponseHTML = `
                    <div class="flex items-start gap-2">
                        <div class="w-8 h-8 bg-black rounded-full flex-shrink-0 flex items-center justify-center">
                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div class="bg-white rounded-2xl rounded-tl-none p-3 shadow-sm max-w-[85%]">
                            <p class="text-gray-800 text-sm">Thanks for your message! This is a demo response. The AI functionality will be connected soon.</p>
                            <p class="text-gray-400 text-[10px] mt-1">Just now</p>
                        </div>
                    </div>
                `;
                chatMessages.insertAdjacentHTML('beforeend', aiResponseHTML);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }, 1000);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Event listeners
        aiFloatingBtn?.addEventListener('click', toggleChat);
        minimizeChat?.addEventListener('click', toggleChat);

        sendMessageBtn?.addEventListener('click', sendMessage);
        chatInput?.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        // Quick actions
        document.querySelectorAll('.quick-action').forEach(btn => {
            btn.addEventListener('click', function () {
                chatInput.value = this.textContent.trim();
                sendMessage();
            });
        });

        // Nav button listeners
        document.getElementById('aiChatBtn')?.addEventListener('click', function () {
            if (!isChatOpen) toggleChat();
        });
        document.getElementById('aiChatBtnMobile')?.addEventListener('click', function () {
            if (!isChatOpen) toggleChat();
            document.getElementById('mobile-menu').classList.add('hidden');
        });

        // Fetch and update cart count on page load
        async function loadCartCount() {
            try {
                const response = await fetch('/Cart/Count');
                const data = await response.json();
                const cartCountEl = document.getElementById('cart-count');
                if (cartCountEl) {
                    let count = data.count || 0;
                    if (count > 99) count = 99;
                    cartCountEl.textContent = count;
                }
            } catch (error) {
                console.error('Error loading cart count:', error);
            }
        }
        // Load cart count on page load
        document.addEventListener('DOMContentLoaded', loadCartCount);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>