<!-- _Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Outfitly</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Outfitly.styles.css" asp-append-version="true" />
</head>

<body class="flex flex-col min-h-screen bg-gray-50">
    <!-- Navigation Bar -->
    <header class="bg-white border-b border-gray-200 fixed w-full top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 w-full">
                <!-- Left: Logo + Navigation Links -->
                <div class="flex items-center space-x-8">
                    <!-- Logo -->
                    <a class="text-2xl font-light tracking-widest text-black hover:text-gray-700 transition flex-shrink-0"
                        asp-area="" asp-controller="Home" asp-action="Index">
                        OUTFITLY
                    </a>

                    <!-- Navigation Links (Desktop) - Right next to logo -->
                    <div class="hidden md:flex items-center space-x-6">
                        <a class="text-sm text-gray-700 hover:text-black transition" asp-area=""
                            asp-controller="Products" asp-action="Index">Shop</a>
                        <a class="text-sm text-gray-700 hover:text-black transition" asp-area="" asp-controller="Home"
                            asp-action="About">About</a>
                        <button id="aiChatBtn" class="text-sm text-gray-700 hover:text-black transition">AI
                            Assistant</button>
                    </div>
                </div>

                <!-- Right: Cart + Login -->
                <div class="hidden md:flex items-center space-x-6">
                    <a asp-area="" asp-controller="Account" asp-action="Dashboard"
                        class="text-gray-700 hover:text-black transition">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </a>
                    <a asp-area="" asp-controller="Cart" asp-action="Index"
                        class="text-gray-700 hover:text-black transition relative inline-block">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                        <span id="cartCount"
                            class="absolute -top-1 -right-1 bg-black text-white text-[10px] rounded-full w-4 h-4 flex items-center justify-center font-medium">0</span>
                    </a>
                    <partial name="_LoginPartial" />
                </div>

                <!-- Mobile Menu Button -->
                <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-black">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-200 mt-2">
                <a class="block py-3 text-sm text-gray-700 hover:text-black transition" asp-area=""
                    asp-controller="Products" asp-action="Index">Shop</a>
                <a class="block py-3 text-sm text-gray-700 hover:text-black transition" asp-area=""
                    asp-controller="Home" asp-action="About">About</a>
                <button id="aiChatBtnMobile"
                    class="block py-3 text-sm text-gray-700 hover:text-black transition text-left w-full">
                    AI Assistant
                </button>
                <a class="block py-3 text-sm text-gray-700 hover:text-black transition" asp-area=""
                    asp-controller="Cart" asp-action="Index">Cart</a>
                <div class="py-3 border-t border-gray-200 mt-2">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area with padding-top for fixed header -->
    <div class="flex-grow pt-16">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-xs tracking-widest text-black mb-4">ABOUT</h3>
                    <p class="text-xs text-gray-600 leading-relaxed">
                        Outfitly brings you curated fashion with AI-powered recommendations for your unique style.
                    </p>
                </div>
                <div>
                    <h3 class="text-xs tracking-widest text-black mb-4">CUSTOMER CARE</h3>
                    <ul class="space-y-2 text-xs text-gray-600">
                        <li><a href="#" class="hover:text-black transition">Contact Us</a></li>
                        <li><a href="#" class="hover:text-black transition">Shipping Info</a></li>
                        <li><a href="#" class="hover:text-black transition">Returns</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xs tracking-widest text-black mb-4">CONNECT</h3>
                    <ul class="space-y-2 text-xs text-gray-600">
                        <li><a href="#" class="hover:text-black transition">Instagram</a></li>
                        <li><a href="#" class="hover:text-black transition">Facebook</a></li>
                        <li><a href="#" class="hover:text-black transition">Twitter</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-12 pt-8 border-t border-gray-200 text-center">
                <p class="text-xs text-gray-500">
                    &copy; 2025 Outfitly. All rights reserved. -
                    <a class="hover:text-black transition" asp-area="" asp-controller="Home"
                        asp-action="Privacy">Privacy</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- AI Chat Floating Button -->
    <button id="aiFloatingBtn"
        class="fixed bottom-5 right-5 w-14 h-14 bg-black hover:bg-gray-800 rounded-full shadow-lg flex items-center justify-center transition z-50">
        <svg id="chatOpenIcon" class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        <svg id="chatCloseIcon" class="w-6 h-6 text-white hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>

    <!-- AI Chat Window (Hidden by default) -->
    <div id="aiChatWindow"
        class="hidden fixed bottom-24 right-5 w-80 sm:w-96 h-[500px] bg-white rounded-2xl shadow-2xl flex flex-col z-50 overflow-hidden border border-gray-200">
        <!-- Chat Header -->
        <div class="bg-black text-white px-4 py-3 flex items-center justify-between flex-shrink-0">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-amber-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-medium text-sm">AI Style Assistant</h3>
                    <p class="text-xs text-gray-300">Always here to help</p>
                </div>
            </div>
            <button id="chatMinimize" class="text-gray-300 hover:text-white transition">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
        </div>

        <!-- Chat Messages Area -->
        <div id="chatMessages" class="flex-grow overflow-y-auto p-4 space-y-4 bg-gray-50">
            <!-- Welcome Message -->
            <div class="flex items-start gap-2">
                <div class="w-8 h-8 bg-black rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div class="bg-white rounded-2xl rounded-tl-sm px-4 py-3 shadow-sm max-w-[80%]">
                    <p class="text-sm text-gray-700">
                        Hi there! 👋 I'm your AI Style Assistant. I can help you find the perfect outfit, suggest
                        complementary pieces, and answer any questions about our products.
                    </p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="flex flex-wrap gap-2 pl-10">
                <button
                    class="quick-action px-3 py-1.5 text-xs bg-white border border-gray-200 rounded-full hover:bg-gray-100 transition">
                    Find me an outfit
                </button>
                <button
                    class="quick-action px-3 py-1.5 text-xs bg-white border border-gray-200 rounded-full hover:bg-gray-100 transition">
                    What's trending?
                </button>
                <button
                    class="quick-action px-3 py-1.5 text-xs bg-white border border-gray-200 rounded-full hover:bg-gray-100 transition">
                    Help with sizing
                </button>
            </div>
        </div>

        <!-- Chat Input Area -->
        <div class="bg-white border-t border-gray-200 p-3 flex-shrink-0">
            <div class="flex items-center gap-2">
                <input type="text" id="chatInput" placeholder="Type your message..."
                    class="flex-grow px-4 py-2.5 bg-gray-100 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-black">
                <button id="chatSend"
                    class="w-10 h-10 bg-black text-white rounded-full flex items-center justify-center hover:bg-gray-800 transition flex-shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                </button>
            </div>
            <p class="text-[10px] text-gray-400 text-center mt-2">Powered by AI • Responses may vary</p>
        </div>
    </div>

    <!-- jQuery (required for validation) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Mobile Menu & AI Chat Toggle Script -->
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button')?.addEventListener('click', function () {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // AI Chat functionality
        const chatWindow = document.getElementById('aiChatWindow');
        const floatingBtn = document.getElementById('aiFloatingBtn');
        const openIcon = document.getElementById('chatOpenIcon');
        const closeIcon = document.getElementById('chatCloseIcon');
        const chatInput = document.getElementById('chatInput');
        const chatMessages = document.getElementById('chatMessages');

        function toggleChatWindow() {
            chatWindow.classList.toggle('hidden');
            openIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('hidden');
            if (!chatWindow.classList.contains('hidden')) {
                chatInput.focus();
            }
        }

        // Add user message
        function addUserMessage(text) {
            const msgDiv = document.createElement('div');
            msgDiv.className = 'flex items-start gap-2 justify-end';
            msgDiv.innerHTML = `
                <div class="bg-black text-white rounded-2xl rounded-tr-sm px-4 py-3 max-w-[80%]">
                    <p class="text-sm">${text}</p>
                </div>
            `;
            chatMessages.appendChild(msgDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Add AI response (placeholder)
        function addAIResponse(text) {
            const msgDiv = document.createElement('div');
            msgDiv.className = 'flex items-start gap-2';
            msgDiv.innerHTML = `
                <div class="w-8 h-8 bg-black rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div class="bg-white rounded-2xl rounded-tl-sm px-4 py-3 shadow-sm max-w-[80%]">
                    <p class="text-sm text-gray-700">${text}</p>
                </div>
            `;
            chatMessages.appendChild(msgDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Send message
        function sendMessage() {
            const text = chatInput.value.trim();
            if (text) {
                addUserMessage(text);
                chatInput.value = '';

                // Simulate AI response (placeholder - will be replaced with actual API call)
                setTimeout(() => {
                    addAIResponse("Thanks for your message! Our AI recommendation engine is coming soon. For now, feel free to browse our curated collection. 🛍️");
                }, 1000);
            }
        }

        // Event listeners
        floatingBtn?.addEventListener('click', toggleChatWindow);
        document.getElementById('chatMinimize')?.addEventListener('click', toggleChatWindow);
        document.getElementById('chatSend')?.addEventListener('click', sendMessage);
        chatInput?.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') sendMessage();
        });

        // Quick action buttons
        document.querySelectorAll('.quick-action').forEach(btn => {
            btn.addEventListener('click', function () {
                addUserMessage(this.textContent.trim());
                setTimeout(() => {
                    addAIResponse("Great question! Our AI styling feature is currently being enhanced. In the meantime, check out our latest arrivals for inspiration!");
                }, 1000);
            });
        });

        // Nav button handlers
        document.getElementById('aiChatBtn')?.addEventListener('click', function () {
            if (chatWindow.classList.contains('hidden')) toggleChatWindow();
        });
        document.getElementById('aiChatBtnMobile')?.addEventListener('click', function () {
            document.getElementById('mobile-menu').classList.add('hidden');
            if (chatWindow.classList.contains('hidden')) toggleChatWindow();
        });

        // Cart count update function
        async function updateCartCount() {
            try {
                const response = await fetch('/Cart/Count');
                const data = await response.json();
                const cartCountEl = document.getElementById('cartCount');
                if (cartCountEl) {
                    cartCountEl.textContent = data.count || 0;
                }
            } catch (e) {
                console.log('Could not update cart count');
            }
        }

        // Update cart count on page load
        document.addEventListener('DOMContentLoaded', updateCartCount);

        // Expose globally for use after add to cart
        window.updateCartCount = updateCartCount;
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>