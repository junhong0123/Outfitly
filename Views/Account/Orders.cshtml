@model List<Order>
@{
    ViewData["Title"] = "Order History";
}

<!-- Page Header -->
<div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-3xl md:text-4xl font-light text-black">Order History</h1>
    </div>
</div>

<!-- Order History Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">

    <!-- Filter Tabs -->
    <div class="flex gap-4 mb-8 overflow-x-auto pb-2">
        <button class="filter-tab active px-4 py-2 text-sm whitespace-nowrap border-b-2 border-black font-medium text-black" data-status="all">
            All Orders
        </button>
        <button class="filter-tab px-4 py-2 text-sm whitespace-nowrap border-b-2 border-transparent text-gray-600 hover:text-black" data-status="processing">
            Processing
        </button>
        <button class="filter-tab px-4 py-2 text-sm whitespace-nowrap border-b-2 border-transparent text-gray-600 hover:text-black" data-status="shipped">
            Shipped
        </button>
        <button class="filter-tab px-4 py-2 text-sm whitespace-nowrap border-b-2 border-transparent text-gray-600 hover:text-black" data-status="delivered">
            Delivered
        </button>
        <button class="filter-tab px-4 py-2 text-sm whitespace-nowrap border-b-2 border-transparent text-gray-600 hover:text-black" data-status="cancelled">
            Cancelled
        </button>
    </div>

    <!-- Orders List -->
    <div class="space-y-4">

        <!-- Order Card 1 - Processing -->
        <div class="order-card bg-white border border-gray-200 rounded overflow-hidden" data-status="processing">
            <!-- Order Header -->
            <div class="bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 border-b border-gray-200">
                <div class="flex flex-wrap items-center gap-4">
                    <div>
                        <p class="text-xs text-gray-600 mb-1">ORDER NUMBER</p>
                        <p class="text-sm font-medium text-black">#12345</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">DATE</p>
                        <p class="text-sm text-black">Nov 01, 2025</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">TOTAL</p>
                        <p class="text-sm font-medium text-black">$401.60</p>
                    </div>
                </div>
                <div>
                    <span class="inline-block px-3 py-1 bg-amber-100 text-amber-800 text-xs font-medium rounded-full">
                        Processing
                    </span>
                </div>
            </div>

            <!-- Order Items -->
            <div class="px-6 py-4">
                <div class="flex gap-4 mb-4">
                    <div class="w-20 h-20 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                        <span class="text-gray-400 text-xs">Image</span>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-sm font-medium text-black mb-1">Minimal Cotton Tee</h3>
                        <p class="text-xs text-gray-600">Black / M / Qty: 1</p>
                        <p class="text-sm text-black mt-2">$49.00</p>
                    </div>
                </div>
                <div class="flex gap-4">
                    <div class="w-20 h-20 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                        <span class="text-gray-400 text-xs">Image</span>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-sm font-medium text-black mb-1">Tailored Linen Pants</h3>
                        <p class="text-xs text-gray-600">Blue / L / Qty: 2</p>
                        <p class="text-sm text-black mt-2">$178.00</p>
                    </div>
                </div>
            </div>

            <!-- Order Actions -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row gap-3">
                <a href="#" class="flex-1 text-center border border-gray-300 text-black py-2 text-sm hover:bg-white transition rounded">
                    View Details
                </a>
                <a href="#" class="flex-1 text-center border border-gray-300 text-black py-2 text-sm hover:bg-white transition rounded">
                    Track Order
                </a>
                <a href="#" class="flex-1 text-center bg-black text-white py-2 text-sm hover:bg-gray-800 transition rounded">
                    Buy Again
                </a>
            </div>
        </div>

        <!-- Order Card 2 - Shipped -->
        <div class="order-card bg-white border border-gray-200 rounded overflow-hidden" data-status="shipped">
            <div class="bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 border-b border-gray-200">
                <div class="flex flex-wrap items-center gap-4">
                    <div>
                        <p class="text-xs text-gray-600 mb-1">ORDER NUMBER</p>
                        <p class="text-sm font-medium text-black">#12344</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">DATE</p>
                        <p class="text-sm text-black">Oct 28, 2025</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">TOTAL</p>
                        <p class="text-sm font-medium text-black">$129.00</p>
                    </div>
                </div>
                <div>
                    <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                        Shipped
                    </span>
                </div>
            </div>

            <div class="px-6 py-4">
                <div class="flex gap-4">
                    <div class="w-20 h-20 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                        <span class="text-gray-400 text-xs">Image</span>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-sm font-medium text-black mb-1">Leather Crossbody Bag</h3>
                        <p class="text-xs text-gray-600">Brown / One Size / Qty: 1</p>
                        <p class="text-sm text-black mt-2">$129.00</p>
                    </div>
                </div>

                <!-- Tracking Info -->
                <div class="mt-4 bg-blue-50 border border-blue-200 rounded p-4">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                        </svg>
                        <div class="flex-grow">
                            <p class="text-xs text-blue-900 font-medium mb-1">Out for delivery</p>
                            <p class="text-xs text-blue-800 mb-2">Expected delivery: Nov 10, 2025</p>
                            <p class="text-xs text-blue-700">Tracking: TRK123456789</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row gap-3">
                <a href="#" class="flex-1 text-center border border-gray-300 text-black py-2 text-sm hover:bg-white transition rounded">
                    View Details
                </a>
                <a href="#" class="flex-1 text-center bg-black text-white py-2 text-sm hover:bg-gray-800 transition rounded">
                    Track Order
                </a>
            </div>
        </div>

        <!-- Order Card 3 - Delivered -->
        <div class="order-card bg-white border border-gray-200 rounded overflow-hidden" data-status="delivered">
            <div class="bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 border-b border-gray-200">
                <div class="flex flex-wrap items-center gap-4">
                    <div>
                        <p class="text-xs text-gray-600 mb-1">ORDER NUMBER</p>
                        <p class="text-sm font-medium text-black">#12343</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">DATE</p>
                        <p class="text-sm text-black">Oct 20, 2025</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">TOTAL</p>
                        <p class="text-sm font-medium text-black">$249.00</p>
                    </div>
                </div>
                <div>
                    <span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">
                        Delivered
                    </span>
                </div>
            </div>

            <div class="px-6 py-4">
                <div class="flex gap-4">
                    <div class="w-20 h-20 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                        <span class="text-gray-400 text-xs">Image</span>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-sm font-medium text-black mb-1">Classic Wool Coat</h3>
                        <p class="text-xs text-gray-600">Gray / M / Qty: 1</p>
                        <p class="text-sm text-black mt-2">$249.00</p>
                    </div>
                </div>

                <!-- Delivered Info -->
                <div class="mt-4 bg-green-50 border border-green-200 rounded p-4">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <div>
                            <p class="text-xs text-green-900 font-medium mb-1">Delivered on Oct 25, 2025</p>
                            <p class="text-xs text-green-800">Your order has been successfully delivered.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row gap-3">
                <a href="#" class="flex-1 text-center border border-gray-300 text-black py-2 text-sm hover:bg-white transition rounded">
                    View Details
                </a>
                <a href="#" class="flex-1 text-center border border-gray-300 text-black py-2 text-sm hover:bg-white transition rounded">
                    Write Review
                </a>
                <a href="#" class="flex-1 text-center bg-black text-white py-2 text-sm hover:bg-gray-800 transition rounded">
                    Buy Again
                </a>
            </div>
        </div>

        <!-- Order Card 4 - Cancelled -->
        <div class="order-card bg-white border border-gray-200 rounded overflow-hidden" data-status="cancelled">
            <div class="bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 border-b border-gray-200">
                <div class="flex flex-wrap items-center gap-4">
                    <div>
                        <p class="text-xs text-gray-600 mb-1">ORDER NUMBER</p>
                        <p class="text-sm font-medium text-black">#12342</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">DATE</p>
                        <p class="text-sm text-black">Oct 15, 2025</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-600 mb-1">TOTAL</p>
                        <p class="text-sm font-medium text-black">$79.00</p>
                    </div>
                </div>
                <div>
                    <span class="inline-block px-3 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">
                        Cancelled
                    </span>
                </div>
            </div>

            <div class="px-6 py-4">
                <div class="flex gap-4">
                    <div class="w-20 h-20 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                        <span class="text-gray-400 text-xs">Image</span>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-sm font-medium text-black mb-1">Silk Blend Blouse</h3>
                        <p class="text-xs text-gray-600">White / S / Qty: 1</p>
                        <p class="text-sm text-black mt-2">$79.00</p>
                    </div>
                </div>

                <!-- Cancelled Info -->
                <div class="mt-4 bg-red-50 border border-red-200 rounded p-4">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        <div>
                            <p class="text-xs text-red-900 font-medium mb-1">Order cancelled</p>
                            <p class="text-xs text-red-800">This order was cancelled on Oct 16, 2025. Refund processed.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row gap-3">
                <a href="#" class="flex-1 text-center border border-gray-300 text-black py-2 text-sm hover:bg-white transition rounded">
                    View Details
                </a>
                <a href="#" class="flex-1 text-center bg-black text-white py-2 text-sm hover:bg-gray-800 transition rounded">
                    Shop Similar
                </a>
            </div>
        </div>

    </div>

    <!-- Empty State (Hidden by default) -->
    <div id="emptyState" class="hidden text-center py-20">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h2 class="text-2xl font-light text-black mb-3">No orders found</h2>
        <p class="text-sm text-gray-600 mb-8">You haven't placed any orders yet</p>
        <a asp-area="" asp-controller="Products" asp-action="Index"
           class="inline-block bg-black text-white px-8 py-3 text-sm tracking-wide hover:bg-gray-800 transition">
            START SHOPPING
        </a>
    </div>

    <!-- Pagination -->
    <div class="mt-12 flex justify-center">
        <nav class="flex items-center gap-2">
            <button class="px-4 py-2 text-sm text-gray-400 cursor-not-allowed">
                Previous
            </button>
            <button class="px-4 py-2 text-sm bg-black text-white">1</button>
            <button class="px-4 py-2 text-sm text-gray-700 hover:text-black hover:bg-gray-100">2</button>
            <button class="px-4 py-2 text-sm text-gray-700 hover:text-black hover:bg-gray-100">3</button>
            <button class="px-4 py-2 text-sm text-gray-700 hover:text-black">
                Next
            </button>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        // Filter functionality
        const filterTabs = document.querySelectorAll('.filter-tab');
        const orderCards = document.querySelectorAll('.order-card');
        const emptyState = document.getElementById('emptyState');

        filterTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Update active tab
                filterTabs.forEach(t => {
                    t.classList.remove('active', 'border-black', 'font-medium', 'text-black');
                    t.classList.add('border-transparent', 'text-gray-600');
                });
                this.classList.add('active', 'border-black', 'font-medium', 'text-black');
                this.classList.remove('border-transparent', 'text-gray-600');

                // Filter orders
                const status = this.dataset.status;
                let visibleCount = 0;

                orderCards.forEach(card => {
                    if (status === 'all' || card.dataset.status === status) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Show/hide empty state
                if (visibleCount === 0) {
                    emptyState.classList.remove('hidden');
                } else {
                    emptyState.classList.add('hidden');
                }
            });
        });

        // Track order button click
        document.querySelectorAll('a[href="#"]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const action = this.textContent.trim();
                console.log('Action clicked:', action);
                // TODO: Implement actual functionality
            });
        });
    </script>
}