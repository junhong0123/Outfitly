@{
    ViewData["Title"] = "My Account";
}

<!-- Page Header -->
<div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-3xl md:text-4xl font-light text-black mb-2">My Account</h1>
        <p class="text-sm text-gray-600">Welcome back, John!</p>
    </div>
</div>

<!-- Dashboard Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <!-- Left Sidebar: Navigation -->
        <aside class="lg:col-span-1">
            <nav class="bg-white border border-gray-200 rounded overflow-hidden">
                <a asp-area="" asp-controller="Account" asp-action="Dashboard"
                   class="block px-4 py-3 text-sm bg-gray-50 text-black border-l-2 border-black font-medium">
                    Dashboard
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Orders"
                   class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-black border-l-2 border-transparent">
                    Orders
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Profile"
                   class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-black border-l-2 border-transparent">
                    Profile
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Addresses"
                   class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-black border-l-2 border-transparent">
                    Addresses
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Wishlist"
                   class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-black border-l-2 border-transparent">
                    Wishlist
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Settings"
                   class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-black border-l-2 border-transparent border-t border-gray-200">
                    Settings
                </a>
                <a href="#" onclick="return confirm('Are you sure you want to logout?')"
                   class="block px-4 py-3 text-sm text-red-600 hover:bg-red-50 border-l-2 border-transparent border-t border-gray-200">
                    Logout
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="lg:col-span-3">

            <!-- Statistics Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">

                <!-- Total Orders -->
                <div class="bg-white border border-gray-200 rounded p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-2xl font-light text-black mb-1">12</p>
                    <p class="text-xs text-gray-600">Total Orders</p>
                </div>

                <!-- Pending Orders -->
                <div class="bg-white border border-gray-200 rounded p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-2xl font-light text-black mb-1">2</p>
                    <p class="text-xs text-gray-600">Pending Orders</p>
                </div>

                <!-- Total Spent -->
                <div class="bg-white border border-gray-200 rounded p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    </div>
                    <p class="text-2xl font-light text-black mb-1">$2,459</p>
                    <p class="text-xs text-gray-600">Total Spent</p>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="bg-white border border-gray-200 rounded mb-8">
                <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                    <h2 class="text-lg font-medium text-black">Recent Orders</h2>
                    <a asp-area="" asp-controller="Account" asp-action="Orders"
                       class="text-xs text-gray-600 hover:text-black">View All</a>
                </div>

                <div class="divide-y divide-gray-200">
                    <!-- Order 1 -->
                    <div class="px-6 py-4 hover:bg-gray-50 transition">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-4">
                                <div class="w-16 h-16 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                                    <span class="text-gray-400 text-xs">Image</span>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-black mb-1">Order #12345</p>
                                    <p class="text-xs text-gray-600">Nov 01, 2025 • 2 items</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-medium text-black mb-1">$401.60</p>
                                <span class="inline-block px-2 py-1 bg-amber-100 text-amber-800 text-xs rounded-full">
                                    Processing
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Order 2 -->
                    <div class="px-6 py-4 hover:bg-gray-50 transition">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-4">
                                <div class="w-16 h-16 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                                    <span class="text-gray-400 text-xs">Image</span>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-black mb-1">Order #12344</p>
                                    <p class="text-xs text-gray-600">Oct 28, 2025 • 1 item</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-medium text-black mb-1">$129.00</p>
                                <span class="inline-block px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                                    Shipped
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Order 3 -->
                    <div class="px-6 py-4 hover:bg-gray-50 transition">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-4">
                                <div class="w-16 h-16 bg-gray-100 rounded flex-shrink-0 flex items-center justify-center">
                                    <span class="text-gray-400 text-xs">Image</span>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-black mb-1">Order #12343</p>
                                    <p class="text-xs text-gray-600">Oct 20, 2025 • 1 item</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-medium text-black mb-1">$249.00</p>
                                <span class="inline-block px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">
                                    Delivered
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">

                <!-- AI Recommendations -->
@*                 <div class="bg-gradient-to-br from-amber-50 to-amber-100 border border-amber-200 rounded p-6">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 bg-amber-200 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <h3 class="text-sm font-medium text-amber-900">AI Style Recommendations</h3>
                    </div>
                    <p class="text-xs text-amber-800 mb-4">Get personalized product suggestions based on your preferences</p>
                    <button class="w-full bg-amber-800 text-white py-2 text-sm hover:bg-amber-900 transition rounded">
                        View Recommendations
                    </button>
                </div> *@

                <!-- Track Orders -->
@*                 <div class="bg-white border border-gray-200 rounded p-6">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </div>
                        <h3 class="text-sm font-medium text-black">Track Your Orders</h3>
                    </div>
                    <p class="text-xs text-gray-600 mb-4">Get real-time updates on your order status and delivery</p>
                    <a asp-area="" asp-controller="Account" asp-action="Orders"
                       class="block w-full text-center border border-gray-300 text-black py-2 text-sm hover:bg-gray-50 transition rounded">
                        Track Orders
                    </a>
                </div> *@
            </div>

            <!-- Account Information -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">

                <!-- Profile Info -->
                <div class="bg-white border border-gray-200 rounded p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-sm font-medium text-black">Profile Information</h3>
                        <a asp-area="" asp-controller="Account" asp-action="Profile"
                           class="text-xs text-gray-600 hover:text-black">Edit</a>
                    </div>
                    <div class="space-y-2">
                        <div>
                            <p class="text-xs text-gray-600">Name</p>
                            <p class="text-sm text-black">John Doe</p>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Email</p>
                            <p class="text-sm text-black">john@example.com</p>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Phone</p>
                            <p class="text-sm text-black">+1 (555) 123-4567</p>
                        </div>
                    </div>
                </div>

                <!-- Default Address -->
                <div class="bg-white border border-gray-200 rounded p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-sm font-medium text-black">Default Address</h3>
                        <a asp-area="" asp-controller="Account" asp-action="Addresses"
                           class="text-xs text-gray-600 hover:text-black">Edit</a>
                    </div>
                    <div class="text-sm text-gray-700 leading-relaxed">
                        <p>123 Main Street</p>
                        <p>Apartment 4B</p>
                        <p>New York, NY 10001</p>
                        <p>United States</p>
                    </div>
                </div>
            </div>

        </main>
    </div>
</div>

