@section Scripts {
    <script>
        // Image gallery navigation
        let currentImageIndex = 0;
        const totalImages = 4;
        const imageSlides = document.querySelectorAll('.image-slide');
        const currentImageCounter = document.getElementById('currentImageIndex');
        const dotIndicators = document.querySelectorAll('.dot-indicator');

        function showImage(index) {
            // Hide all images
            imageSlides.forEach(slide => {
                slide.classList.remove('active');
                slide.classList.add('opacity-0');
            });

            // Show current image
            imageSlides[index].classList.add('active');
            imageSlides[index].classList.remove('opacity-0');

            // Update counter
            currentImageCounter.textContent = index + 1;

            // Update dots
            dotIndicators.forEach((dot, i) => {
                if (i === index) {
                    dot.classList.remove('bg-gray-300');
                    dot.classList.add('bg-black');
                } else {
                    dot.classList.remove('bg-black');
                    dot.classList.add('bg-gray-300');
                }
            });
        }

        // Next image button
        document.getElementById('nextImage').addEventListener('click', function() {
            currentImageIndex = (currentImageIndex + 1) % totalImages;
            showImage(currentImageIndex);
        });

        // Previous image button
        document.getElementById('prevImage').addEventListener('click', function() {
            currentImageIndex = (currentImageIndex - 1 + totalImages) % totalImages;
            showImage(currentImageIndex);
        });

        // Dot indicators click
        dotIndicators.forEach((dot, index) => {
            dot.addEventListener('click', function() {
                currentImageIndex = index;
                showImage(currentImageIndex);
            });
        });

        // Color selection
        document.querySelectorAll('.color-option').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove selection from all colors
                document.querySelectorAll('.color-option').forEach(b => {
                    b.classList.remove('ring-2', 'ring-black', 'ring-offset-2');
                });
                // Add selection to clicked color
                this.classList.add('ring-2', 'ring-black', 'ring-offset-2');
            });
        });

        // Size selection
        document.querySelectorAll('.size-option').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove selection from all sizes
                document.querySelectorAll('.size-option').forEach(b => {
                    b.classList.remove('bg-black', 'text-white', 'border-black');
                    b.classList.add('text-gray-700');
                });
                // Add selection to clicked size
                this.classList.add('bg-black', 'text-white', 'border-black');
                this.classList.remove('text-gray-700');
            });
        });

        // Quantity controls
        const quantityInput = document.getElementById('quantity');
        const decreaseBtn = document.getElementById('decreaseQty');
        const increaseBtn = document.getElementById('increaseQty');

        decreaseBtn.addEventListener('click', function() {
            const currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        });

        increaseBtn.addEventListener('click', function() {
            const currentValue = parseInt(quantityInput.value);
            quantityInput.value = currentValue + 1;
        });

        // Add to cart form submission
        document.getElementById('addToCartForm').addEventListener('submit', function(e) {
            const selectedColor = document.querySelector('.color-option.ring-2')?.dataset.color || 'default';
            const selectedSize = document.querySelector('.size-option.bg-black')?.textContent.trim();
            const quantity = quantityInput.value;

            if (!selectedSize) {
                e.preventDefault();
                alert('Please select a size');
                return false;
            }

            // Update hidden form fields
            document.getElementById('formQuantity').value = quantity;
            document.getElementById('formColor').value = selectedColor;
            document.getElementById('formSize').value = selectedSize;
            
            // Form will submit normally
        });
    </script>
}